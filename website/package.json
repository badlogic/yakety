{
  "name": "yakety-website",
  "version": "1.0.0",
  "description": "Yakety AI website",
  "type": "module",
  "scripts": {
    "dev": "npm run build && concurrently -r \"node esbuild.mjs --watch\" \"npm run build:css -- --watch\" \"cd docker && ./control.sh startdev\"",
    "build": "npm run clean && npm run build:css && node esbuild.mjs",
    "build:css": "npx tailwindcss -i html/styles.css -o html/build/styles.css",
    "clean": "rimraf build",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write ."
  },
  "dependencies": {
    "compression": "^1.7.5",
    "cors": "^2.8.5",
    "express": "^4.21.1",
    "lit": "^2.8.0",
    "ws": "8.18.0"
  },
  "devDependencies": {
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.18",
    "@types/ws": "^8.5.13",
    "autoprefixer": "^10.4.20",
    "chokidar": "^3.5.3",
    "concurrently": "^8.1.0",
    "esbuild": "^0.17.19",
    "esbuild-postcss": "^0.0.4",
    "postcss": "8.4.32",
    "prettier": "^3.5.3",
    "rimraf": "^5.0.5",
    "tailwindcss": "3.4.15",
    "typescript": "5.7.2",
    "vite": "^6.3.5"
  },
  "license": "Proprietary"
}
